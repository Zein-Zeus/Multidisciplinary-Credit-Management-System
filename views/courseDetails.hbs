<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{courseName}}</title>
    <link rel="stylesheet" href="/css/courseDetails.css"> 
</head>
<body>
    <nav>
        <div class="logo">
            <a href="/">
                <img src="/images/logo.png" alt="Logo">
            </a>
        </div>
        <ul>
            <li><a href="#" onclick="viewCourse('{{_id}}')" class="active-tab">Stream</a></li>
            <li><a href="#" onclick="viewClasswork('{{_id}}')">Classwork</a></li>
            <li><a href="#" onclick="viewEnrolledStudents('{{_id}}')">People</a></li>
            <li><a href="#">Grades</a></li>
        </ul>
    </nav>

    <section class="course-overview">
        <h1 class="course-title">{{courseName}}</h1>
        <div class="course-details">
            <p class="description">{{courseDescription}}</p>
            <p class="info">
                <strong>Credits:</strong> {{credits}} points<br>
                <strong>Duration:</strong> {{duration}} hours<br>
                <strong>Mode:</strong> {{mode}}<br>
                <strong>College:</strong> {{collegeName}}<br>
                <strong>Faculty:</strong> {{facultyName}}<br>
            </p>
            <p class="info">
                <strong>Modules:</strong>
                <ul>
                    {{#each modules}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </p>
            <button type="submit" class="enroll-btn">Register Now</button>
            <a href="/course-dashboard" class="back-link">Back to Dashboard</a>
        </div>
    </section>
    <script>
        function viewEnrolledStudents(courseId) {
            window.location.href = `/view-enrolled-students/${courseId}`;
        }
        function viewCourse(courseId) {
            window.location.href = `/view-course/${courseId}`;
        }
        function viewClasswork(courseId) {
            window.location.href = `/view-classwork/${courseId}`;
        }
    </script>
</body>
</html>
